generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model users {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  telegram_id   String   @unique
  username      String
  first_name    String?
  last_name     String?
  photo_url     String?
  referral_code String
  referral_count Int     @default(0)
  referral_link  String
 createdAt      DateTime? @default(now()) @map("created_at") // Optional and mapped to created_at
  updatedAt      DateTime? @updatedAt @map("updated_at") // Optional and mapped to updated_at
}

